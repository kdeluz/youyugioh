<h1>Shopping Cart</h1>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @cart.cart_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td>
          <%= form_with(model: item, url: cart_item_path(item), method: :patch, local: true) do |f| %>
            <%= f.number_field :quantity, value: item.quantity %>
            <%= f.submit "Update" %>
          <% end %>
        </td>
        <td><%= number_to_currency(item.product.price) %></td>
        <td><%= number_to_currency(item.quantity * item.product.price) %></td>
        <td>
          <%= link_to 'Remove', cart_item_path(item), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>Total: <%= number_to_currency(@cart.cart_items.sum { |item| item.quantity * item.product.price }) %></h2>
<%= link_to 'Checkout', new_order_path, class: 'button is-primary' %>
