<h1>Order <%= @order.id %></h1>
<p>
  <strong>Total:</strong> <%= number_to_currency(@order.calculate_order_total) %><br>
  <strong>GST:</strong> <%= number_to_currency(@order.gst) %><br>
  <strong>PST:</strong> <%= number_to_currency(@order.pst) %><br>
  <strong>HST:</strong> <%= number_to_currency(@order.hst) %><br>
  <strong>QST:</strong> <%= number_to_currency(@order.qst) %>
</p>

<h3>Items:</h3>
<ul>
  <% @order.order_items.each do |item| %>
    <li><%= item.product.name %> - Quantity: <%= item.quantity %> - Price: <%= number_to_currency(item.price) %></li>
  <% end %>
</ul>
